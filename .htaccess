<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redirige URLs con /public/ para que sean limpias
    RewriteCond %{REQUEST_URI} ^/public/
    RewriteRule ^public/(.*)$ /$1 [L,R=301]

    # Sirve todo desde la carpeta /public
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>
